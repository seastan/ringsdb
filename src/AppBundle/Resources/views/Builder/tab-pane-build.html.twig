<div class="row">
    <div class="col-md-12 text-right" style="margin-bottom: 10px">
        <label class="btn btn-default btn-xs" type="button" id="filter-text-button">
            <span class="fa fa-question"></span> Filter help
        </label>

        <div class="btn-group">
            <label type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                <span class="fa fa-check-square-o"></span> Sets <span class="caret"></span>
            </label>
            <ul class="dropdown-menu pull-right" id="set-selection-menu" data-filter="pack_code" title="Shift+Click to select only one option ; Alt+Shift+Click to select all other options"></ul>
        </div>

        <div class="btn-group">
            <label type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                <span class="fa fa-gear"></span> Options <span class="caret"></span>
            </label>
            <ul class="dropdown-menu pull-right" id="config-options">
                <li><a href="#"><label><input type="checkbox" name="show-unusable"> Show unusable cards</label></a></li>
                <li><a href="#"><label><input type="checkbox" name="show-only-deck"> Show only used cards (bypasses filters)</label></a></li>
                <li><a href="#"><label><input type="checkbox" name="compact-mode"> Compact mode</label></a></li>
                <li><a href="#"><label><input type="radio" name="display-column" value="1"> Display on 1 column</label></a></li>
                <li><a href="#"><label><input type="radio" name="display-column" value="2"> Display on 2 columns</label></a></li>
                <li><a href="#"><label><input type="radio" name="display-column" value="3"> Display on 3 columns</label></a></li>
                <li><a href="#"><label><input type="radio" name="core-set" value="1"> Use 1 Core Set</label></a></li>
                <li><a href="#"><label><input type="radio" name="core-set" value="2"> Use 2 Core Sets</label></a></li>
                <li><a href="#"><label><input type="radio" name="core-set" value="3"> Use 3 Core Sets</label></a></li>
                <li><a href="#"><label><input type="radio" name="show-suggestions" value="0"> Show no suggestion</label></a></li>
                <li><a href="#"><label><input type="radio" name="show-suggestions" value="3"> Show 3 suggestions</label></a></li>
                <li><a href="#"><label><input type="radio" name="show-suggestions" value="10"> Show 10 suggestions</label></a></li>
                <li><a href="#"><label><input type="radio" name="buttons-behavior" value="cumulative"> Sphere/type cumulative</label></a></li>
                <li><a href="#"><label><input type="radio" name="buttons-behavior" value="exclusive"> Sphere/type exclusive</label></a></li>
            </ul>
        </div>

        <div class="btn-group">
            <label type="button" class="btn btn-default btn-xs dropdown-toggle " data-toggle="dropdown">
                <span class="fa fa-sort"></span> Sort <span class="caret"></span>
            </label>
            <ul class="dropdown-menu pull-right" id="menu-sort">
                <li><a href="#" id="btn-sort-type"><label>by Type</label></a></li>
                <li><a href="#" id="btn-sort-position"><label>by Pack</label></a></li>
                <li><a href="#" id="btn-sort-sphere"><label>by Sphere</label></a></li>
                <li><a href="#" id="btn-sort-name"><label>by Name</label></a></li>
            </ul>
        </div>
    </div>
</div>

<div class="row">
    <!-- Search Bar -->
    <div class="col-sm-12" style="margin-bottom: 10px">
        <input type="text" class="form-control" id="filter-text" placeholder="Find a card or filter the list" tabindex="1">
    </div>
    <!-- Search Bar -->
    <div class="col-sm-12" style="margin-bottom: 10px">
        <div class="btn-group btn-group-justified" data-filter="sphere_code" data-toggle="buttons"></div>
    </div>
    <div class="col-sm-12" style="margin-bottom: 10px">
        <div class="btn-group btn-group-justified" data-filter="type_code" data-toggle="buttons"></div>
    </div>
</div>

<!-- Collection Table -->
<div class="row" id="collection">
    <div class="col-sm-12">
        <table class="table table-condensed table-hover" style="margin-bottom:10px">
            <thead>
            <tr>
                <th style="min-width:85px"><a href="#" data-sort="indeck">Quantity</a></th>
                <th><a href="#" data-sort="name">Name</a></th>
                <th class="sphere hidden-xs"><a href="#" data-toggle="tooltip" data-sort="sphere_code" title="Sphere">S.</a></th>
                <th class="type hidden-xs"><a href="#" data-toggle="tooltip" data-sort="type_code" title="Type">T.</a></th>
                <th class="cost hidden-xs"><a href="#" data-toggle="tooltip" data-sort="cost|threat" title="Cost/Threat">C.</a></th>
                <th class="willpower hidden-xs"><a href="#" data-toggle="tooltip" data-sort="willpower" title="Willpower"><span class="icon-willpower"></span></a></th>
                <th class="attack hidden-xs"><a href="#" data-toggle="tooltip" data-sort="attack" title="Attack"><span class="icon-attack"></span></a></th>
                <th class="defense hidden-xs"><a href="#" data-toggle="tooltip" data-sort="defense" title="Defense"><span class="icon-defense"></span></a></th>
                <th class="health hidden-xs"><a href="#" data-toggle="tooltip" data-sort="health" title="Hit Points"><span class="icon-health"></span></a></th>
            </tr>
            </thead>
            <tbody id="collection-table" class="collection"></tbody>
        </table>
    </div>
    <div id="collection-grid" class="col-sm-12"></div>
</div>
